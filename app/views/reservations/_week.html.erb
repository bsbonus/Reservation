<% i = 0 %>

<% headers.each do |day| %>
	<% if @date_range[i] == Date.today %>
		<%= today_cell(i, @date_range) %>
		<%= i = i + 1 %>
	<% elsif @date_range[i].month != Time.now.month %>
		<%= not_in_month_cell(i, @date_range) %>
		<% i = i + 1 %>
	<% else %>
		<%= not_today_cell(i, @date_range) %>
	<% i = i + 1 %>
	<% end %>
<% end %>



