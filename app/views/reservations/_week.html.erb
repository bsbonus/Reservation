<% headers = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"] %>
<% i = 0 %>

<% headers.each do |day| %>
	<% if @date_range[i] == Date.today %>
		<%= create_cell(i, @date_range, "today") %>
		<%= i = i + 1 %>
	<% elsif @date_range[i].month != Time.now.month %>
		<%= create_cell(i, @date_range, "not_in_month") %>
		<% i = i + 1 %>
	<% else %>
		<%= create_cell(i, @date_range, "not_today") %>
	<% i = i + 1 %>
	<% end %>
<% end %>



