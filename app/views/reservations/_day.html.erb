<% collection.each do |day_reservations| %>
		<% room = day_reservations.room %>
		<% time_in = day_reservations.time_in.localtime.strftime("%l:%M %p") %>
		<% time_out = day_reservations.time_out.localtime.strftime("%l:%M %p") %>
		<% reservation_details = room + " " + time_in + " " + time_out %>
		<p id="single_reserv">
			<%= link_to reservation_details, edit_reservation_path(day_reservations, :class => class_generator(day_reservations) ) ,
			:id => day_reservations.id, :class => class_generator(day_reservations) %>
<% end %>



